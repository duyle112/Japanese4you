<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorToolbarBg"
            android:paddingLeft="@dimen/row_ranking_tvExerciseName_paddingLeft"
            android:text="Vocabulary Exercise 01"
            android:textColor="@android:color/white"
            android:textSize="@dimen/row_ranking_tvExerciseName_fontsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTestsTaken"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FF66"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colorToolbarBg"
                android:textSize="@dimen/row_ranking_tvtextTaken_fontsize" />

            <include
                android:id="@+id/scoreProgress"
                layout="@layout/progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FF66"
                android:gravity="center"
                android:text="@string/row_ranking_tvTestTaken_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/row_ranking_tvDescription_fontsize" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FF66"
                android:gravity="center"
                android:text="@string/row_ranking_tvLastScore_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/row_ranking_tvDescription_fontsize" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>