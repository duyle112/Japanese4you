<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoangduy.japanese4you.fragments.WordsFragment">

    <TextView
        android:id="@+id/tvWordTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#DDDDDD"
        android:gravity="center"
        android:text="Words"
        android:textColor="@color/colorToolbarBg"
        android:textSize="25sp" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tvWordTitle"
        android:id="@+id/wordsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
