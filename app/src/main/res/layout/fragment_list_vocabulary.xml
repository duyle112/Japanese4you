<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hoangduy.japanese4you.fragments.ListVocabularyFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="28dp"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:textColor="@color/colorToolbarBg"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"
        app:pstsDividerColor="@android:color/white"
        app:pstsIndicatorHeight="5dp"
        android:textSize="12dp"
        android:layout_width="match_parent"
        app:pstsIndicatorColor="@color/colorToolbarBg"
        android:layout_height="28dp"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/flContainerSub"
        android:layout_width="match_parent"
        android:layout_below="@+id/tabs"
        android:layout_height="match_parent"/>

</RelativeLayout>
