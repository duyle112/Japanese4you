<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">#00EE00</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">@color/colorToolbarBg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="fragment_question_button_styles">
        <item name="android:text">Submit</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/colorToolbarBg</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="dialog_result_tvTitle_styles">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorToolbarBg</item>
    </style>

    <style name="dialog_result_tvsubTitle_styles">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorToolbarBg</item>
    </style>

</resources>
